<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ComboBox?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ToolBar?>
<BorderPane fx:controller="Default.DefaultController" fx:id="sceneBase" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>

            <Label text="Track Player" />
        </HBox>
    </top>
    <left>
        <VBox styleClass="side-bar" minWidth="200">

        </VBox>
    </left>
    <center>
        <TableView fx:id="trackTable">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="Song">
                    <cellValueFactory>
                        <PropertyValueFactory property="Name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Artist">
                    <cellValueFactory>
                        <PropertyValueFactory property="Name" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Album">
                    <cellValueFactory>
                        <PropertyValueFactory property="Name" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox spacing="10">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="5" bottom="5" left="5"/>
                </padding>

                <HBox spacing="10" alignment="CENTER">
                    <Region HBox.hgrow="ALWAYS" />

                    <Button styleClass="btn-transparent" onMouseClicked="#onPreviousClicked">PREV</Button>
                    <Button styleClass="btn-transparent" onMouseClicked="#onStartClicked">START</Button>
                    <Button styleClass="btn-transparent" onMouseClicked="#onNextClicked">NEXT</Button>

                    <Region HBox.hgrow="ALWAYS" />
                </HBox>

                <Slider fx:id="playbackProgress" />
            </VBox>

            <ToolBar styleClass="footer">
                <items>
                    <CheckBox text="Shuffle"/>

                    <Region HBox.hgrow="ALWAYS" />

                    <ComboBox promptText="Options" style="-fx-background-color: transparent;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Settings"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </items>
            </ToolBar>
        </VBox>
    </bottom>
</BorderPane>