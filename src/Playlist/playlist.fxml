<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:controller="Playlist.PlaylistController" xmlns:fx="http://javafx.com/fxml" vgap="10" alignment="TOP_LEFT">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <VBox GridPane.rowIndex="0" spacing="5">
        <Label styleClass="lbl-large" text="Name" />
        <TextField promptText="New Playlist Name " />
    </VBox>
    <VBox GridPane.rowIndex="1" spacing="5">
        <Label styleClass="lbl-large" text="Description" />
        <TextField promptText="Give your playlist a description here" />
    </VBox>

    <HBox GridPane.rowIndex="2" spacing="10">
        <Button text="CREATE" />
        <Button text="CANCEL" styleClass="btn-danger" />
    </HBox>
</GridPane>