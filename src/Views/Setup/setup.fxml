<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<VBox fx:controller="Views.Setup.SetupController" fx:id="sceneBase" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox>
        <Button fx:id="btnLocalDirectory" text="Set Local Music Folder" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    </HBox>

    <Separator>
        <padding>
            <Insets top="10" bottom="10" />
        </padding>
    </Separator>

    <HBox>
        <Button fx:id="btnCompleteSetup" text="Complete Setup" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    </HBox>
</VBox>