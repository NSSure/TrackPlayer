<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Views.Layout.SystemMenu.SystemMenuController">
    <MenuBar styleClass="header" HBox.hgrow="ALWAYS" fx:id="menuBar">
        <menus>
            <Menu styleClass="menu" text="File">
                <items>
                    <MenuItem styleClass="menu-item" text="New"/>
                    <MenuItem styleClass="menu-item" text="Open"/>
                    <MenuItem styleClass="menu-item" text="Save"/>
                    <MenuItem styleClass="menu-item" text="Save As"/>
                    <SeparatorMenuItem  />
                    <MenuItem styleClass="menu-item" text="Exit"/>
                </items>
            </Menu>
            <Menu styleClass="menu" text="Playlist">
                <items>
                    <MenuItem styleClass="menu-item" text="Create new playlist" onAction="#toPlaylist"></MenuItem>
                </items>
            </Menu>
            <Menu styleClass="menu" text="Edit">
                <items>
                    <MenuItem styleClass="menu-item" text="Copy"/>
                    <MenuItem styleClass="menu-item" text="Cut"/>
                    <MenuItem styleClass="menu-item" text="Paste"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <MenuBar styleClass="header">
        <menus>
            <Menu styleClass="menu" fx:id="minimizeMenu"></Menu>
            <Menu styleClass="menu" fx:id="maximizeMenu"></Menu>
            <Menu styleClass="menu" fx:id="exitMenu"></Menu>
        </menus>
    </MenuBar>
</HBox>