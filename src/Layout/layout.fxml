<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>

<BorderPane fx:controller="Layout.LayoutController" fx:id="sceneBase" xmlns:fx="http://javafx.com/fxml">
    <top>
        <ToolBar styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Region HBox.hgrow="ALWAYS" />

            <Button text="Tracks" onMouseClicked="#toTrackList" />
            <Button text="New Playlist" onMouseClicked="#toPlaylist" />
        </ToolBar>
    </top>
    <left>
        <VBox styleClass="side-bar" minWidth="200" spacing="20">
            <padding>
                <Insets top="20" right="10" bottom="10" left="10"/>
            </padding>
            <HBox alignment="CENTER_LEFT">
                <ImageView>
                    <image>
                        <Image url="@/images/placeholder.png" requestedHeight="150" requestedWidth="150" />
                    </image>
                </ImageView>
            </HBox>
            <VBox>
                <Label style="-fx-font-weight: bold; -fx-font-size: 14" text="SONG NAME" />
                <Label text="Artist Name" />
            </VBox>
        </VBox>
    </left>
    <center>

    </center>
    <bottom>
        <VBox>
            <VBox spacing="20" styleClass="playbackControls">
                <padding>
                    <Insets top="20" right="10" bottom="20" left="10"/>
                </padding>

                <HBox spacing="30" alignment="CENTER">
                    <Region HBox.hgrow="ALWAYS" />

                    <Label fx:id="lblStepBackward" onMouseClicked="#onPreviousClicked" />
                    <Label fx:id="lblTogglePlayback" onMouseClicked="#onStartClicked" />
                    <Label fx:id="lblStepForward" onMouseClicked="#onNextClicked" />

                    <Region HBox.hgrow="ALWAYS" />
                </HBox>

                <HBox spacing="15">
                    <Label text="0:00" fx:id="lblCurrentTimeElapsed" />
                    <Slider fx:id="playbackProgress" HBox.hgrow="ALWAYS" />
                    <Label text="0:00" fx:id="lblTrackDuration" />
                </HBox>
            </VBox>

            <ToolBar styleClass="footer">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>

                <items>
                    <Label fx:id="lblSoundLevel" onMouseClicked="#onSoundLevelIconClicked" minWidth="30">
                        <padding>
                            <Insets right="10" />
                        </padding>
                    </Label>

                    <Slider minWidth="100" />

                    <Region HBox.hgrow="ALWAYS" />

                    <MenuButton text="Welcome (Current User)" style="fx-background-color: transparent">
                        <items>
                            <MenuItem text="Account">
                                <accelerator>
                                    <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                </accelerator>
                            </MenuItem>
                            <MenuItem text="Settings" />
                        </items>
                    </MenuButton>
                </items>
            </ToolBar>
        </VBox>
    </bottom>

    <!--<fx:include source="../Tracks/Tracks.fxml" fx:id="tracksController" />-->
</BorderPane>